# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
end_of_line = lf
max_line_length = 140

[*.ts]
ij_typescript_use_double_quotes = false
ij_typescript_force_quote_style = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
